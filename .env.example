# ===================================================================
# CreativeHub Backend - Environment Variables
# Copy this file to .env and fill in your values
# ===================================================================

# ==================== Server Configuration ====================
NODE_ENV=development
PORT=5000

# ==================== Database Configuration ====================
# MongoDB connection string
# Local: mongodb://localhost:27017/creativehub
# Atlas: mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/creativehub
DATABASE_URL=mongodb://localhost:27017/creativehub

# ==================== JWT Configuration ====================
# Secret keys - MUST change in production!
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# ==================== Password Hashing ====================
BCRYPT_SALT_ROUNDS=12

# ==================== Frontend URL ====================
# For CORS and password reset email links
FRONTEND_URL=http://localhost:3000

# ==================== Cloudinary Configuration ====================
# For file uploads
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ==================== Email Configuration ====================
# For sending emails (password reset, notifications, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@creativehub.com

# ==================== Payment Gateway (bKash) ====================
BKASH_USERNAME=
BKASH_PASSWORD=
BKASH_APP_KEY=
BKASH_APP_SECRET=
BKASH_BASE_URL=

# ==================== Payment Gateway (Stripe) ====================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ==================== Payment Gateway (PayPal) ====================
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
